    "version": "0.2.0",
    "configurations": [
        {
            "name": "Launch Adaptodb",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "${workspaceFolder}/cmd/adaptodb",
            "args": [],
            "env": {},
            "cwd": "${workspaceFolder}",
            "console": "integratedTerminal",
            "preLaunchTask": "Build all and cleanup",
        },
        {
            "name": "Launch Client",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "${workspaceFolder}/cmd/client",
            "args": [],
            "env": {},
            "cwd": "${workspaceFolder}",
            "console": "integratedTerminal",
            "preLaunchTask": "Build all and cleanup",
        },
        {
            "name": "Attach to Remote Debug Session",
            "type": "go",
            "request": "attach",
            "mode": "remote",
            "remotePath": "",
            "host": "127.0.0.1", // edit host and port to attach to a remote debug session
            "port": 2345,
        },
        {
            "name": "Attach to Process",
            "type": "go",
            "request": "attach",
            "mode": "local",
            "processId": "${command:pickProcess}",
        }
    ]
}